{
    "compilerOptions": {
      "sourceMap": true,
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "moduleResolution": "node",
      "noImplicitThis": false,
      "baseUrl": ".",
      "paths": {
          "@notes": ["src/js/notes"],
          "@notes/*": ["src/js/notes/*"],
          "@dumpbucket": ["src/js/dumpbucket"],
          "@dumpbucket/*": ["src/js/dumpbucket/*"],
          "@config": ["config/GeneralConfig"]
      }
    },

    "include": [
        "src/**/*",
        "config/**/*",
        "build/**/*"
    ],

    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}